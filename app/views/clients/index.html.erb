<H2>Client List</H2>

<% if current_user.admin %>
<h3><%= link_to "Create New Client", new_client_path(@client) %></h3>
<% end%>

<div style="overflow-x:auto;">
   <div class="scrollit">
    <table id="table">
      <tr>
        <th>Company Name</th>
      </tr>
      <% @clients.alphabetical.each do |c| %>
      <tr>
       <td><%= link_to c.company_name, client_path(c) %> </td>
     </tr>
     <% end %>
    </table>
  </div>
</div>
